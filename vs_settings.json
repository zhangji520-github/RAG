{
  // ===========================================
  // GitHub Copilot AI 代码助手配置
  // ===========================================
  "github.copilot.enable": {
    "*": true,           // 在所有文件类型中启用 Copilot
    "plaintext": false,  // 在纯文本文件中禁用 Copilot
    "markdown": true,    // 在 Markdown 文件中启用 Copilot
    "scminput": false    // 在源代码管理输入框中禁用 Copilot
  },
  // 禁用 Copilot 的下一次编辑建议功能（实验性功能）
  "github.copilot.nextEditSuggestions.enabled": false,

  // ===========================================
  // 文件管理和界面设置
  // ===========================================
  // 禁用文件资源管理器中的紧凑文件夹显示，让文件夹层级更清晰
  "explorer.compactFolders": false,

  // ===========================================
  // Python 开发环境配置
  // ===========================================
  // 在 Windows 终端中设置环境变量，让 Python 能找到当前工作区的模块
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },

  // ===========================================
  // 安全和信任设置
  // ===========================================
  // 允许访问的 UNC 主机列表，这里允许访问 WSL (Windows Subsystem for Linux)
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  // ===========================================
  // Python 语言服务器和分析配置
  // ===========================================
  // 告诉 Python 语言服务器额外搜索的路径，提高代码补全和错误检测
  "python.analysis.extraPaths": [
    "${workspaceFolder}"
  ],
  // Python 自动导入功能：在代码补全时自动提供导入建议
  "python.analysis.autoImportCompletions": true,
  // Python 自动补全函数括号：选择函数补全时自动添加括号
  "python.analysis.completeFunctionParens": true,
  // Python 自动搜索路径：自动发现项目中的模块和虚拟环境
  "python.analysis.autoSearchPaths": true,
  // Python 输入时自动格式化：实时调整代码格式（可选，较为激进）
  // "python.analysis.autoFormatOnType": true,

  // ===========================================
  // 远程开发配置
  // ===========================================
  // 自动端口转发的来源设置：hybrid = 混合模式，自动检测需要转发的端口
  "remote.autoForwardPortsSource": "hybrid",
  
  // ===========================================
  // 构建工具配置
  // ===========================================
  // 打开包含 Makefile 的项目时自动配置 Makefile 支持
  "makefile.configureOnOpen": true,
  
  // ===========================================
  // 终端和界面配置
  // ===========================================
  // 在 Windows 上设置默认终端为命令提示符
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  // 隐藏空编辑器中的提示信息
  "workbench.editor.empty.hint": "hidden",
  
  // ===========================================
  // Python 解释器配置
  // ===========================================
  // 指定默认的 Python 解释器路径（你的虚拟环境）
  "python.defaultInterpreterPath": "e:\\Python_support\\env_py\\python.exe",
  
  // ===========================================
  // 远程 SSH 主机配置
  // ===========================================
  // 指定远程 SSH 主机的平台类型，用于正确的远程开发体验
  "remote.SSH.remotePlatform": {
    "connect.cqa1.seetacloud.com": "linux",  // SeetaCloud 服务器平台
    "seetacloud-cqa1": "linux"               // SeetaCloud 备用服务器平台
  },
  
  // ===========================================
  // Jupyter Notebook 配置
  // ===========================================
  // 在 Jupyter Notebook 输出中启用自动换行，避免长文本超出显示范围
  "notebook.output.wordWrap": true,
  
  // ===========================================
  // AI 工具配置
  // ===========================================
  // 启用 Lingma AI 聊天的 MCP 工具代理模式
  "Lingma.aI Chat.mcpToolsInAgentMode": true,
  
  // ===========================================
  // 主题和外观配置
  // ===========================================
  // 设置 VS Code 的颜色主题为默认深色主题
  "workbench.colorTheme": "Default Dark+",
  
  // ===========================================
  // 安全配置
  // ===========================================
  // 对不受信任的文件的处理方式：直接打开（不显示安全警告）
  "security.workspace.trust.untrustedFiles": "open"
}